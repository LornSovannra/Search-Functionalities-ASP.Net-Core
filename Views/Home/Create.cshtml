@model Employee
@{
    ViewData["Title"] = "Create Employee";
}

<div style="max-width: 700px; margin: 20px auto; justify-content: center; align-items: center;">
    <form method="POST" asp-controller="Home" asp-action="Create">
        <div class="card">
            <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
                <h5>Create Employee</h5>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Back</a>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Fname" class="form-label"></label>
                    <input asp-for="Fname"  class="form-control">
                    <span asp-validation-for="Fname" class="text-danger mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Lname" class="form-label"></label>
                    <input asp-for="Lname"  class="form-control">
                    <span asp-validation-for="Lname" class="text-danger mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" asp-items="@((List<SelectListItem>)ViewBag.gender)" class="form-control">
                        <option disabled>Please gender</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email"  class="form-control">
                    <span asp-validation-for="Email" class="text-danger mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address"  class="form-control">
                    <span asp-validation-for="Address" class="text-danger mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label"></label>
                    <select asp-for="DepartmentId" class="form-control">
                        <option disabled>Please department</option>
                        @foreach(var d in ViewBag.department)
                        {
                            <option value="@d.Id">@d.DepartmentName</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger mt-1"></span>
                </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>